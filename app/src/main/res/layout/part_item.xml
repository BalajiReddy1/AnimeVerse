<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/part_image"
        android:layout_width="200dp"
        android:scaleType="centerCrop"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:src="@drawable/imageview_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/part_image" />

    <TextView
        android:id="@+id/part_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:padding="4dp"
        android:text="part name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/part_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/part_image"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>